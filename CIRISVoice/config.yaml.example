stt:
  provider: openai  # or 'google'
  # api_key: set via STT_API_KEY env var
  language: en-US
  model: whisper-1

tts:
  provider: openai  # or 'google'
  # api_key: set via TTS_API_KEY env var
  voice: nova  # OpenAI voices: alloy, echo, fable, onyx, nova, shimmer
  model: tts-1-hd  # Higher quality
  speed: 0.9  # Slightly slower for clarity

ciris:
  api_url: http://localhost:8080
  # api_key: set via CIRIS_API_KEY env var (if required)
  timeout: 30
  channel_id: home_assistant
  profile: home_assistant

wyoming:
  host: 0.0.0.0
  port: 10300
  name: CIRIS Voice Assistant

debug: false
